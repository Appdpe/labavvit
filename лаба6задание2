# Базовый класс Vehicle
class Vehicle:
    def init(self, make, model):
        self.make = make  # марка
        self.model = model  # модель
    
    def get_info(self):
        """Метод возвращает информацию о транспортном средстве"""
        return f"Транспортное средство: {self.make} {self.model}"


# Класс Car, наследующий от Vehicle
class Car(Vehicle):
    def init(self, make, model, fuel_type):
        # Вызов конструктора родительского класса
        super().init(make, model)
        self.fuel_type = fuel_type  # тип топлива
    
    def get_info(self):
        """Переопределение метода get_info() с добавлением информации о топливе"""
        # Используем метод родительского класса и добавляем свою информацию
        base_info = super().get_info()
        return f"{base_info}, Тип топлива: {self.fuel_type}"


# Тестирование классов
if name == "main":
    print("=" * 60)
    print("Лабораторная работа №6, Задание 2: Полиморфизм и наследование")
    print("=" * 60)
    
    print("\n1. Создание объектов:")
    print("-" * 40)
    
    # Создание объекта базового класса Vehicle
    vehicle = Vehicle("Производитель", "Модель")
    print(f"Базовый класс: {vehicle.get_info()}")
    
    # Создание объектов класса Car (наследник)
    car1 = Car("Toyota", "Camry", "Бензин")
    car2 = Car("Tesla", "Model 3", "Электричество")
    
    print(f"Автомобиль 1: {car1.get_info()}")
    print(f"Автомобиль 2: {car2.get_info()}")
    
    print("\n2. Демонстрация полиморфизма:")
    print("-" * 40)
    
    # Создаем список разных транспортных средств
    vehicles = [
        Vehicle("Generic", "Vehicle"),
        Car("BMW", "X5", "Дизель"),
        Car("Nissan", "Leaf", "Электричество"),
        Vehicle("Марка", "Модель")
    ]
    
    # Все объекты имеют метод get_info(), но результат разный
    for i, vehicle in enumerate(vehicles, 1):
        print(f"{i}. {vehicle.get_info()}")
    
    print("\n3. Проверка наследования:")
    print("-" * 40)
    
    # Проверяем, что Car действительно наследует от Vehicle
    print(f"car1 является экземпляром Car: {isinstance(car1, Car)}")
    print(f"car1 является экземпляром Vehicle: {isinstance(car1, Vehicle)}")
    print(f"Vehicle является родителем Car: {issubclass(Car, Vehicle)}")
    
    print("\n" + "=" * 60)
    print("Задание выполнено!")
    print("=" * 60)
