class UserAccount:
    def init(self, username, email, password):
        self.username = username
        self.email = email
        self.__password = password  # приватный атрибут
    
    def set_password(self, new_password):
        """Безопасное изменение пароля"""
        if len(new_password) >= 6:
            self.__password = new_password
            return "Пароль успешно изменен"
        else:
            return "Ошибка: пароль должен содержать не менее 6 символов"
    
    def check_password(self, password):
        """Проверка соответствия пароля"""
        return password == self.__password
    
    def get_info(self):
        """Получение информации о пользователе (без пароля)"""
        return f"Пользователь: {self.username}, Email: {self.email}"
